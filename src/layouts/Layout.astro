---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "EMX | Canada",
  description = "Fast, accurate, and customizable Engineering solutions for small to large-scale manufacturing needs in Canada."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
  </head>
  <body>
    <div class="wrapper">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    /* Color system */
    --color-primary-50: #e9edf7;
  --color-primary-100: #c8d3eb;
  --color-primary-200: #a4b8df;
  --color-primary-300: #809ed3;
  --color-primary-400: #567fbf;
  --color-primary-500: #2f4a7d; /* main dark blue */
  --color-primary-600: #263b66;
  --color-primary-700: #1c2c4d;
  --color-primary-800: #131d34;
  --color-primary-900: #0a0f1b;

  /* Secondary (Light Blue) */
  --color-secondary-50: #e8f8fe;
  --color-secondary-100: #d0f0fd;
  --color-secondary-200: #a0e1fb;
  --color-secondary-300: #70d2f9;
  --color-secondary-400: #40c3f7;
  --color-secondary-500: #56ccf2; /* main light blue */
  --color-secondary-600: #1caee8;
  --color-secondary-700: #1285b5;
  --color-secondary-800: #0c5c82;
  --color-secondary-900: #06324f;

  /* Accent (Orange) */
  --color-accent-50: #fff3eb;
  --color-accent-100: #ffe0cc;
  --color-accent-200: #ffc199;
  --color-accent-300: #ffa366;
  --color-accent-400: #ff8533;
  --color-accent-500: #eb5e28; /* main orange */
  --color-accent-600: #cc4d1f;
  --color-accent-700: #a63e19;
  --color-accent-800: #802f13;
  --color-accent-900: #591f0d;

  /* Highlight / Warning (Yellow) */
  --color-warning-50: #fffbea;
  --color-warning-100: #fff3c4;
  --color-warning-200: #fce588;
  --color-warning-300: #fadb5f;
  --color-warning-400: #f7c948;
  --color-warning-500: #f2c94c; /* main yellow */
  --color-warning-600: #cfa132;
  --color-warning-700: #a67924;
  --color-warning-800: #7d5718;
  --color-warning-900: #54360f;

  /* Success & Error (unchanged) */
  --color-success-500: #22c55e;
  --color-error-500: #ef4444;

  --color-text-dark: #1e1e1e;
  --color-text-light: #ffffff;

    /* Spacing system (8px) */
    --space-1: 0.25rem;    /* 4px */
    --space-2: 0.5rem;    /* 8px */
    --space-3: 0.75rem;    /* 12px */
    --space-4: 1rem;       /* 16px */
    --space-5: 1.5rem;     /* 24px */
    --space-6: 2rem;       /* 32px */
    --space-8: 3rem;       /* 48px */
    --space-10: 4rem;      /* 64px */
    --space-12: 5rem;      /* 80px */

    /* Typography */
    --font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;

    /* Border radius */
    --radius-sm: 0.25rem;
    --radius-md: 0.5rem;
    --radius-lg: 0.75rem;

    /* Transitions */
    --transition-fast: 150ms ease;
    --transition-normal: 250ms ease;
    --transition-slow: 350ms ease;
  }

  *, *::before, *::after {
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
    scroll-padding-top: 80px;
    overflow-x: hidden;
  }

  body {
    font-family: var(--font-family);
    margin: 0;
    padding: 0;
    color: var(--color-text-dark);
    line-height: 1.5;
    overflow-x: hidden;
  }

  .wrapper {
    max-width: 100%;
    overflow-x: hidden;
  }

  h1, h2, h3, h4, h5, h6 {
    margin: 0 0 var(--space-4) 0;
    line-height: 1.2;
  }

  h1 {
    font-size: 2.5rem;
  }

  h2 {
    font-size: 2.5rem;
    margin-bottom: var(--space-6);
  }

  h3 {
    font-size: 1.5rem;
  }

  p {
    margin: 0 0 var(--space-4) 0;
    overflow-wrap: break-word;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  a {
    text-decoration: none;
    color: var(--color-primary-500);
    transition: color var(--transition-fast);
  }

  a:hover {
    color: var(--color-primary-600);
  }

  button, .button {
    display: inline-block;
    background-color: var(--color-primary-500);
    color: var(--color-text-light);
    border: none;
    border-radius: var(--radius-md);
    padding: var(--space-3) var(--space-5);
    font-family: var(--font-family);
    font-size: 1rem;
    font-weight: 500;
    cursor: pointer;
    transition:
      background-color var(--transition-fast),
      transform var(--transition-fast);
    white-space: normal;
    max-width: 100%;
  }

  button:hover, .button:hover {
    background-color: var(--color-primary-600);
    transform: translateY(-2px);
  }

  .button-secondary {
    background-color: transparent;
    border: 2px solid var(--color-primary-400);
    color: var(--color-primary-400);
  }

  .button-secondary:hover {
    background-color: var(--color-primary-500);
    color: var(--color-text-light);
  }

  .button-accent {
    background-color: var(--color-accent-500);
  }

  .button-accent:hover {
    background-color: var(--color-accent-100);
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  section {
    padding: var(--space-10) 0;
  }

  section h2 {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .text-center {
    text-align: center;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: var(--space-5);
  }

  @media (min-width: 640px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }
  }

  .card {
    background-color: white;
    border-radius: var(--radius-md);
    padding: var(--space-5);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
  }
 

  @media (min-width: 768px) {
    h1 {
      font-size: 1.75rem;
    }

    h2 {
      font-size: 2.5rem;
    }

    h3 {
      font-size: 1.75rem;
    }

    /* Add this rule to force the text onto one line on larger screens */
    .description-text {
      white-space: nowrap;
    }
  }
</style>