---
import packagingImg from '../assets/PackagingConveyorLine.jpg';
import conveyorImg from '../assets/SheetMetalFabrication.JPG';
import gpuImg from '../assets/CustomDesign.JPG';
import controlPanelImg from '../assets/ControlPanelManufacturing.png';
import generalImg from '../assets/GeneralManufacturing.png';
import { Image } from 'astro:assets';


const industries = [
  {
    name: "Packaging Equipment Manufacturing",
    description:
      "Precision components for packaging machinery including frames, guards, chutes, and specialized assemblies. We understand the durability and precision requirements for high-speed packaging operations.",
    image: packagingImg,
  },
  {
    name: "Conveyor Systems",
    description:
      "Complete range of conveyor components including guards, brackets, frames, and drive assemblies. Our experience with conveyor manufacturers ensures parts that perform reliably in demanding applications.",
    image: conveyorImg,
  },
  {
    name: "Enclosure and GPU manufacturing",
    description:
      "Custom enclosures, sheet metal components, and control panels for GPU manufacturing operations. We fabricate protective housings, cooling system components, and precision sheet metal parts that meet the demanding requirements of graphics processing unit production.",
    image: gpuImg,
  },
/*  {
    name: "Control Panel Manufacturing",
    description:
      "Enclosures, brackets, mounting hardware, and custom panel components. We deliver parts that meet electrical code requirements and ensure proper fit for control panel applications.",
    image: controlPanelImg,
  },
  {
    name: "General Manufacturing",
    description:
      "Custom components, replacement parts, and prototype development across various manufacturing sectors. Our adaptable capabilities serve diverse industrial requirements.",
    image: generalImg,
  },*/
];
---

<section class="industries" id="industries">
  <div class="container">
    <div class="header-content">
      <h2 class="industries-title">Industries We Serve</h2>
      <p class="section-intro">Trusted by Leading Manufacturers</p>
    </div>

    <div class="grid">
      {industries.map((industry) => (
        <div class="industry-card">
          <div class="image-container">
            <Image src={industry.image} alt={industry.name} class="card-image" loading="lazy" />
          </div>
          <div class="content">
            <h3 class="card-title">{industry.name}</h3>
            <p class="card-description">{industry.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .industries {
    background-color: #00000;
    padding: var(--space-12) 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .header-content {
    text-align: center;
    margin-bottom: var(--space-10);
  }

  .industries-title {
    font-size: 3rem;
    font-weight: 800;
    color: var(--color-primary-800);
    margin-bottom: var(--space-2);
  }

  .section-intro {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    color: var(--color-primary-600);
    font-size: 1.25rem;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
  }

  .industry-card {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
    display: flex;
    flex-direction: column;
    height: 100%;
    background: white;
  }

  .industry-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 30px rgba(0, 0, 0, 0.15);
  }

  .image-container {
    position: relative;
    height: 200px;
    overflow: hidden;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal);
  }

  .industry-card:hover .card-image {
    transform: scale(1.1);
  }

  .content {
    padding: var(--space-5);
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .card-title {
    color: var(--color-primary-800);
    margin-bottom: var(--space-2);
    font-size: 1.5rem;
  }

  .card-description {
    color: var(--color-primary-700);
    font-size: 0.95rem;
    flex-grow: 1;
    line-height: 1.6;
  }
</style>