---
import { Carousel, Photo } from "astro-carousel";

import Img1 from "../assets/Projectimg/1.JPG";
import Img2 from "../assets/Projectimg/2.JPG";
import Img3 from "../assets/Projectimg/3.JPG";
import Img4 from "../assets/Projectimg/4.JPG";
import Img5 from "../assets/Projectimg/5.JPG";
import Img6 from "../assets/Projectimg/6.JPG";

const images = [
  { src: Img1, alt: "Project image 1" },
  { src: Img2, alt: "Project image 2" },
  { src: Img3, alt: "Project image 3" },
  { src: Img4, alt: "Project image 4" },
  { src: Img5, alt: "Project image 5" },
  { src: Img6, alt: "Project image 6" },
];
---

<section id="projects" style="padding:3rem 0; text-align:center;">
  <h2 style="margin-bottom:1.5rem;">Our Projects</h2>
  <Carousel 
    images={images} 
    color="hsl(239, 90%, 65%)"
    autoplay
    interval={3000}
    loop
  >
    {images.map((image) => (
      <Photo {image} />
    ))}
  </Carousel>
</section>

<style is:global>
  .astro-carousel {
    max-width: 900px;
    margin: 0 auto;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .astro-carousel {
      max-width: 100%;
      margin: 1rem;
    }
  }

  .astro-carousel__nav-button {
    color: #fff;
    background-color: #3f51b5;
    border-radius: 50%;
    padding: 0.5rem;
    transition: background 0.2s ease-in-out;
  }

  .astro-carousel__nav-button:hover {
    background-color: #2c3a99;
  }

  .astro-carousel__dot {
    background-color: #3f51b5;
    opacity: 0.5;
    transition: opacity 0.2s ease-in-out;
  }

  .astro-carousel__dot--active {
    opacity: 1;
  }

  .astro-carousel img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    display: block;
  }
</style>
