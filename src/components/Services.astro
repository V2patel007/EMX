---
import { Image } from 'astro:assets';
import serviceImg1 from '../assets/Services-img/1.png';
import serviceImg2 from '../assets/Services-img/LaserCut.png';
import serviceImg3 from '../assets/Services-img/6.png';
import serviceImg4 from '../assets/Services-img/4.png';
import serviceImg5 from '../assets/Services-img/8.png';
import serviceImg6 from '../assets/Services-img/BrakePress.png';

const services = [
  {
    title: "Custom Fabrication",
    description: "Complete custom manufacturing services tailored to your specifications...",
    image: serviceImg5,
  },
  {
    title: "Laser Cutting",
    description: "Advanced laser cutting technology delivers precise cuts on steel...",
    image: serviceImg2,
  },
  {
    title: "Brake Forming",
    description: "Professional brake forming services using modern press brake equipment...",
    image: serviceImg1,
  },
  {
    title: "Turret Punching",
    description: "High-speed turret punching capabilities for holes, slots, and custom shapes...",
    image: serviceImg4,
  },
  {
    title: "Rush Manufacturing",
    description: "When urgent needs arise, our rapid response manufacturing service delivers...",
    image: serviceImg3,
  },
  {
    title: "Break Pressing",
    description: "Expert brake pressing services for precise metal bending and forming to meet your project requirements.",
    image: serviceImg6,
  },
  // Add other services if you have images for them, e.g.,
  // {
  //   title: "Installation Services",
  //   description: "Professional installation and integration services...",
  //   image: serviceImg6,
  // },
  // {
  //   title: "Maintenance & Support",
  //   description: "Comprehensive maintenance programs...",
  //   image: serviceImg7,
  // },
];
---

<section class="services" id="services">
  <div class="container">
    <div class="header-content">
      <h2 class="services-title">Our Services</h2>
      <p class="services-subtitle">Comprehensive Manufacturing Solutions for Your Business</p>
    </div>
    
    <div class="services-grid">
      {services.map((service) => (
        <div class="service-card animate-card">
          <Image src={service.image} alt={service.title} class="card-image" />
          <div class="card-content">
            <h3 class="card-title">{service.title}</h3>
            <p class="card-description">{service.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services {
    background: #f9f9f9;
    padding: var(--space-12) 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .header-content {
    text-align: center;
    margin-bottom: var(--space-10);
  }

  .services-title {
    font-size: 3rem;
    font-weight: 800;
    color: var(--color-primary-800);
    margin-bottom: var(--space-2);
  }

  .services-subtitle {
    font-size: 1.25rem;
    color: var(--color-primary-600);
  }

  /* New fluid grid layout */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-6);
  }

  .service-card {
    background: #f9f9f9;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .service-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  /* New image animation */
  .card-image {
    width: 100%;
    height: 220px;
    object-fit: cover;
    transform: scale(1.05); /* Slight zoom-in by default */
    filter: brightness(1);
    transition: transform var(--transition-slow), filter var(--transition-slow);
  }

  .service-card:hover .card-image {
    transform: scale(1.15); /* More prominent zoom on hover */
    filter: brightness(0.8);
  }

  .card-content {
    padding: var(--space-6);
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary-800);
    margin-bottom: var(--space-2);
  }

  .card-description {
    font-size: 0.95rem;
    color: var(--color-primary-700);
    line-height: 1.6;
  }

  /* Fade-in animation for each card */
  .animate-card {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeIn 0.8s ease forwards;
  }

  .animate-card:nth-child(1) { animation-delay: 0.1s; }
  .animate-card:nth-child(2) { animation-delay: 0.2s; }
  .animate-card:nth-child(3) { animation-delay: 0.3s; }
  .animate-card:nth-child(4) { animation-delay: 0.4s; }
  .animate-card:nth-child(5) { animation-delay: 0.5s; }
  .animate-card:nth-child(6) { animation-delay: 0.6s; }
  .animate-card:nth-child(7) { animation-delay: 0.7s; }

  @keyframes fadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

</style>
