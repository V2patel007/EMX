---
const services = [
  {
    title: "Custom Fabrication",
    description: "Complete custom manufacturing services tailored to your specifications. We handle projects from single prototypes to full production runs, working with various materials and complexity levels to meet your exact requirements.",
    image: "https://ik.imagekit.io/kghr7h1un/8.png?updatedAt=1757829475765",
  },
  {
    title: "Laser Cutting",
    description: "Advanced laser cutting technology delivers precise cuts on steel and stainless steel. Our efficient setup processes and skilled operators ensure quick turnaround times while maintaining tight tolerances.",
    image: "https://ik.imagekit.io/kghr7h1un/LaserCut.png?updatedAt=1757829482753",
  },
  {
    title: "Brake Forming",
    description: "Professional brake forming services using modern press brake equipment. We handle everything from simple bends to complex formed components, ensuring consistent results across your entire order.",
    image: "https://ik.imagekit.io/kghr7h1un/BrakePress.png?updatedAt=1757829481628",
  },
  {
    title: "Turret Punching",
    description: "High-speed turret punching capabilities for holes, slots, and custom shapes. Our equipment handles multiple operations in single setups, improving efficiency and reducing lead times.",
    image: "https://ik.imagekit.io/kghr7h1un/4.png?updatedAt=1757829475049",
  },
  {
    title: "Rush Manufacturing",
    description: "When urgent needs arise, our rapid response manufacturing service delivers. Same-day turnaround is available for critical projects, ensuring your production schedule stays on track.",
    image: "https://ik.imagekit.io/kghr7h1un/6.png?updatedAt=1757829475227",
  },
    {
    title: "Installation & Maintenance Service",
    description: "Professional installation and integration services performed by our certified technicians. Provide comprehensive maintenance programs and repair services to keep your equipment operating at peak performance. ",
    image: "https://ik.imagekit.io/kghr7h1un/Installation?updatedAt=1758212675516",
  },
];
---

<section class="services" id="services">
  <div class="container">
    <div class="header-content">
      <h2 class="services-title">Our Services</h2>
      <p class="services-subtitle">Comprehensive Manufacturing Solutions for Your Business</p>
    </div>
    
    <div class="services-grid">
      {services.map((service) => (
        <div class="service-card animate-card">
          <img 
            src={service.image} 
            alt={service.title} 
            class="card-image" 
            width="800" 
            height="600"
            loading="lazy"
          />
          <div class="card-content">
            <h3 class="card-title">{service.title}</h3>
            <p class="card-description">{service.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .services {
    background: #f9f9f9;
    padding: var(--space-12) 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-4);
  }

  .header-content {
    text-align: center;
    margin-bottom: var(--space-10);
  }

  .services-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-primary-700);
    margin-bottom: var(--space-2);
  }

  .services-subtitle {
    font-size: 1.25rem;
    color: var(--color-primary-500);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-6);
  }

  .service-card {
    background: #f9f9f9;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
  }

  .service-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .card-image {
    width: 100%;
    height: 220px;
    object-fit: cover;
    transform: scale(1.05);
    filter: brightness(1);
    transition: transform var(--transition-slow), filter var(--transition-slow);
  }

  .service-card:hover .card-image {
    transform: scale(1.15);
    filter: brightness(0.8);
  }

  .card-content {
    padding: var(--space-6);
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-primary-700);
    margin-bottom: var(--space-2);
  }

  .card-description {
    font-size: 0.95rem;
    color: var(--color-secondary-800);
    line-height: 1.6;
  }

  .animate-card {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeIn 0.8s ease forwards;
  }

  .animate-card:nth-child(1) { animation-delay: 0.1s; }
  .animate-card:nth-child(2) { animation-delay: 0.2s; }
  .animate-card:nth-child(3) { animation-delay: 0.3s; }
  .animate-card:nth-child(4) { animation-delay: 0.4s; }
  .animate-card:nth-child(5) { animation-delay: 0.5s; }
  .animate-card:nth-child(6) { animation-delay: 0.6s; }

  @keyframes fadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
